





@model List<Intern>;


    

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }


    .edit_details {
        display: inline-block;
        background-color: #3498db;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
                   }

    .red_edit_details{
        background-color: rgb(197, 21, 21);
    }

   

        .edit_details:hover {
            background-color: #2980b9;
        }

    .red_edit_details:hover {
        background-color: rgb(158, 21, 21);
    }

        .edit_details:focus {
            outline: none;
        }
    </style>
   
        <table>

      <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>

          </tr>
      </thead>

            <tbody>
              @foreach(var interns in Model)
        {
            <tr>
                <td>@interns.Id</td>
                <td>@interns.Name</td>
                <td>@interns.Email</td>
                <td>@interns.Phone</td>
                <td>@interns.Address</td>
                <td>

                    <a class="edit_details" asp-controller="List_Page"
                       asp-action="Edit" asp-route-id="@interns.Id">
                        Edit Details
                    </a>

                    <a class="edit_details  red_edit_details" asp-controller="List_Page"
                       asp-action="Delete" asp-route-id="@interns.Id">
                        Delete Intern
                    </a>
                </td>
            </tr>
            
        }
            
               
            </tbody>

        </table>
