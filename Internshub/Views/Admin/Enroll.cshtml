@model Internshub.Models.EnrollResumeModel




<form class="enroll_form" method="post" enctype="multipart/form-data">
    <div class="head_enroll">
        <h1>Apply!</h1>
    </div>
      
    <div class="enroll_fields">
      
            <div class="fields_e">
                <label for="Name">Name</label>
                <input type="text" value="@Model.Name" name="Name" id="Name" >
            <span asp-validation-for="Name" style="color:red; font-size:0.6em;"></span>
            </div>
       

        <div class="fields_e">
            <label for="Email">Email</label>
            <input type="Email" value="@Model.Email" name="Email" id="Email" >
            <span asp-validation-for="Email" style="color:red; font-size:0.6em;"></span>
        </div>

        <div class="fields_e">
            <label for="Phone">Phone</label>
            <input type="number" value="@Model.Phone" name="Phone" id="Phone" >
            <span asp-validation-for="Phone" style="color:red; font-size:0.6em;"></span>
        </div>

        <div class="fields_e">
            <label for="address">Address</label>
            <input type="text" value="@Model.Address" name="address" id="address" >
            <span asp-validation-for="Address" style="color:red; font-size:0.6em;"></span>
        </div> 

        <div class="fields_e">  
            <label for="Qualification">Qualification</label>
            <input type="text" value="@Model.Qualification" name="Qualification" >
            <span asp-validation-for="Qualification" style="color:red; font-size:0.6em;"></span>
        </div>

        <div class="fields_e">
            <label for="Skills">Skills</label>
            <input type="text" value="@Model.Skills" name="Skills" asp-for="Skills">
            <span asp-validation-for="Skills" style="color:red; font-size:0.6em;"></span>
        </div>

        <div class="fields_e">
            <label for="Appliedfor">Appliedfor</label>
            <input type="text"  value="@Model.Appliedfor" name="Appliedfor" asp-for="Appliedfor">
            <span asp-validation-for="Appliedfor" style="color:red; font-size:0.6em;"></span>
        </div>
        <div class="fields_e">
            <label for="Resumefile">Resume</label>
            <input type="file"  name="Resumefile" asp-for="Resumefile">
            <span asp-validation-for="Appliedfor" style="color:red; font-size:0.7em;"></span>
        </div>


    </div>

    <div class="form_submit_div">
        <button type="submit">Enroll</button>
    </div>

</form>