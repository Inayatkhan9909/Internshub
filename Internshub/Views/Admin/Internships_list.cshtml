@model List<AddInternshipModel>;




<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px; 
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .edit_details, .get_resume {
        display: inline-block;
        padding: 8px; 
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 12px;
        transition: background-color 0.3s; 
    }

    .red_edit_details {
        background-color: rgb(197, 21, 21);


    }

    .edit_details:hover, .get_resume:hover {
        background-color: #0056b3;
        color:white;
    }

    .red_edit_details:hover {
        background-color: rgb(158, 21, 21);
        color: white;
    }

    .edit_details:focus, .get_resume:focus {
        outline: none;
    }
</style>

<table>

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Skills</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Min Qualification</th>
            <th>Responsibilities</th>
            <th>Type</th>
            <th>Mode</th>
            <th>Image</th>
            <th>Action</th>


        </tr>
    </thead>

    <tbody>
        @foreach (var interns in Model)
        {
            <tr>
                <td>@interns.Id</td>
                <td>@interns.Internship_Name</td>
                <td>@interns.Internship_Skills</td>
                <td>@interns.Internship_details</td>
                <td>@interns.Duration</td>
                <td>@interns.MinQualification</td>
                <td>@interns.Responsibilites</td>
                <td>@interns.InternshipType</td>
                <td>@interns.InternshipMode</td>
               
                <td><a href="@interns.IntershipPicUrl" class="get_resume">View</a></td>
                <td>

                    <a class="edit_details" asp-controller="Admin" asp-action="EditInternship" asp-route-id="@interns.Id">
                        Edit
                    </a>

                    <a class="edit_details red_edit_details" asp-controller="Admin" asp-action="DeleteInternship" asp-route-id="@interns.Id">
                        Delete
                    </a>
                </td>
            </tr>

        }


    </tbody>

</table>

